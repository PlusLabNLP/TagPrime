{
    "dataset": "scierc",
    "debug": true,
    "task": "re",
    "bert_model_name": "allenai/scibert_scivocab_uncased",
    "bert_cache_dir": "./cache",
    "multi_piece_strategy": "average",
    "bert_dropout": 0.2,
    "linear_dropout": 0.2,
    "linear_bias": true,
    "linear_activation": "relu",
    "linear_hidden_num": 300,
    "use_crf": true,
    "use_span_feature": true,
    "use_type_feature": true,
    "train_file": "../SciERC/train.json",
    "dev_file": "../SciERC/dev.json",
    "test_file": "../SciERC/test.json",
    "use_pred_ner": false,
    "output_dir": "./output/re_scierc_scibert_sep+Subjprompt+Typeprompt_addfeat_string",
    "model_type": "sep+Subjprompt+Typeprompt",
    "subject_type": "string",
    "relation_type": "string",
    "tag_type": false,
    "accumulate_step": 1,
    "batch_size": 2,
    "eval_batch_size": 12,
    "max_epoch": 100,
    "max_length": 300,
    "learning_rate": 0.001,
    "bert_learning_rate": 1e-05,
    "weight_decay": 0.001,
    "bert_weight_decay": 1e-05,
    "warmup_epoch": 5,
    "grad_clipping": 5.0,
    "gpu_device": 0,
    "seed": 3333
}