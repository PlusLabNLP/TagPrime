{
    "dataset": "erees",
    "debug": true,
    "task": "ed",
    "bert_model_name": "bert-base-multilingual-cased",
    "bert_cache_dir": "./cache",
    "multi_piece_strategy": "average",
    "bert_dropout": 0.2,
    "linear_dropout": 0.2,
    "linear_bias": true,
    "linear_activation": "relu",
    "linear_hidden_num": 300,
    "use_crf": true,
    "use_type_feature": false,
    "use_ner": true, 
    "train_file": "../processed_data/ereXL_es_mbert/train.json",
    "dev_file": "../processed_data/ereXL_es_mbert/dev.json",
    "test_file": "../processed_data/ereXL_es_mbert/test.json",
    "output_dir": "./output/ed_mbert_erees_joint",
    "model_type": "CRF",
    "accumulate_step": 1,
    "batch_size": 6,
    "eval_batch_size": 12,
    "max_epoch": 90,
    "max_length": 350,
    "learning_rate": 0.001,
    "bert_learning_rate": 1e-05,
    "weight_decay": 0.001,
    "bert_weight_decay": 1e-05,
    "warmup_epoch": 5,
    "grad_clipping": 5.0,
    "gpu_device": 0,
    "seed": 111
}
