{
    "dataset": "ace04r",
    "debug": true,
    "task": "re",
    "bert_model_name": "albert-xxlarge-v1",
    "bert_cache_dir": "./cache",
    "multi_piece_strategy": "average",
    "bert_dropout": 0.2,
    "linear_dropout": 0.2,
    "linear_bias": true,
    "linear_activation": "relu",
    "linear_hidden_num": 300,
    "use_crf": true,
    "use_span_feature": true,
    "use_type_feature": false,
    "use_rel_feature": false,
    "train_file": "../ACE04_RE/fold2/train.json",
    "dev_file": "../ACE04_RE/fold2/dev.json",
    "test_file": "../ACE04_RE/fold2/test.json",
    "use_pred_ner": false,
    "output_dir": "./output/re_ace04r-fold2_albert_noprompt",
    "model_type": "noprompt",
    "subject_type": false,
    "relation_type": false,
    "tag_type": false,
    "accumulate_step": 1,
    "batch_size": 32,
    "eval_batch_size": 32,
    "max_epoch": 80,
    "max_length": 200,
    "learning_rate": 0.001,
    "bert_learning_rate": 2e-05,
    "weight_decay": 0.001,
    "bert_weight_decay": 1e-05,
    "warmup_epoch": 5,
    "grad_clipping": 5.0,
    "gpu_device": 0,
    "seed": 11
}
