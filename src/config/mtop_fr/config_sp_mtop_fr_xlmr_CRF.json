{
    "dataset": "mtop",
    "debug": true,
    "task": "sp",
    "bert_model_name": "xlm-roberta-large",
    "bert_cache_dir": "./cache",
    "multi_piece_strategy": "average",
    "bert_dropout": 0.2,
    "linear_dropout": 0.2,
    "linear_bias": true,
    "linear_activation": "relu",
    "linear_hidden_num": 150,
    "use_crf": true,
    "use_type_feature": false,
	"use_pred_intent": false, 
    "use_slot_feature": false,
    "train_file": "../processed_data/mtop_fr/train.json",
    "dev_file": "../processed_data/mtop_fr/dev.json",
    "test_file": "../processed_data/mtop_fr/test.json",
    "output_dir": "./output/sp_mtop_fr_CRF",
    "model_type": "CRF",
    "intent_type": false,
    "slot_type": false,
    "accumulate_step": 1,
    "batch_size": 32,
    "eval_batch_size": 32,
    "max_epoch": 30,
    "max_length": 60,
    "learning_rate": 0.001,
    "bert_learning_rate": 1e-05,
    "weight_decay": 0.001,
    "bert_weight_decay": 1e-05,
    "warmup_epoch": 5,
    "grad_clipping": 5.0,
    "gpu_device": 0,
    "seed": 3333
}
