{
    "dataset": "ace05zh",
    "debug": true,
    "task": "eae",
    "bert_model_name": "xlm-roberta-large",
    "bert_cache_dir": "./cache",
    "multi_piece_strategy": "average",
    "bert_dropout": 0.2,
    "linear_dropout": 0.2,
    "linear_bias": true,
    "linear_activation": "relu",
    "linear_hidden_num": 150,
    "use_crf": true,
    "use_trigger_feature": true,
    "use_type_feature": true,
    "use_role_feature": true,
    "use_init_type_feature": false,
    "use_init_role_feature": false,
    "train_file": "../processed_data/ace05XL_zh_xlm/train.json",
    "dev_file": "../processed_data/ace05XL_zh_xlm/dev.json",
    "test_file": "../processed_data/ace05XL_zh_xlm/test.json",
    "output_dir": "./output/eae_ace05zh_xlmr-large_sep+CRF+Triprompt+Typeprompt+rolefeat+typefeat",
    "model_type": "sep+CRF+Triprompt+Typeprompt",
    "trigger_type": "string",
    "role_type": "string",
    "accumulate_step": 6,
    "batch_size": 6,
    "eval_batch_size": 2,
    "max_epoch": 90,
    "max_length": 300,
    "learning_rate": 0.001,
    "bert_learning_rate": 1e-05,
    "weight_decay": 0.001,
    "bert_weight_decay": 1e-05,
    "warmup_epoch": 5,
    "grad_clipping": 5.0,
    "gpu_device": 0,
    "seed": 3333
}
